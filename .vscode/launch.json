{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run joule-pac-1",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cmd/sc-mqtt-clt",
            "args": [
                "-ca_file", "${workspaceFolder}/assets/joule-pac-1/root-CA.cert.pem",
                "-cert", "${workspaceFolder}/assets/joule-pac-1/cert.pem",
                "-pkey", "${workspaceFolder}/assets/joule-pac-1/private.key",
                "-client_id", "joule-pac-1",
                "-topic", "joule-pac-1/#"
             ]
        },
        {
            "name": "Run pac-test-jvdbc",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cmd/sc-mqtt-clt",
            "args": [
                "-ca_file", "${workspaceFolder}/assets/pac-test-jvdbc/root-CA.cert.pem",
                "-cert", "${workspaceFolder}/assets/pac-test-jvdbc/cert.pem",
                "-pkey", "${workspaceFolder}/assets/pac-test-jvdbc/private.key",
                "-client_id", "pac-test-jvdbc",
                "-topic", "pac-test-jvdbc/#"
             ]
        },
        {
            "name": "Publish joule-pac-1",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cmd/sc-mqtt-clt",
            "args": [
                "-ca_file", "${workspaceFolder}/assets/joule-pac-1/root-CA.cert.pem",
                "-cert", "${workspaceFolder}/assets/joule-pac-1/cert.pem",
                "-pkey", "${workspaceFolder}/assets/joule-pac-1/private.key",
                "-client_id", "joule-pac-1",
                "-topic", "joule-pac-1/topic1",
                "-publish"
             ]
        },
        {
            "name": "Subscribe clenain",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cmd/sc-mqtt-clt",
            "env": {
                "AWS_ACCESS_KEY_ID": "<?>",
                "AWS_SECRET_ACCESS_KEY":"<?>"
             },
            "args": [
                "-port", "443",
                "-client_id", "joule-pac-1",
                "-topic", "joule-pac-1/#",
                "-websocket",
                "-debug"
             ]
        },
        {
            "name": "Subscribe clenain with proxy",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cmd/sc-mqtt-clt",
            "args": [
                "-proxy_host", "vip-users.proxy.edf.fr",
                "-proxy_port", "3131",
                "-port", "443",
                "-client_id", "joule-pac-1",
                "-topic", "joule-pac-1/#"
             ],
             "env": {
                "AWS_ACCESS_KEY_ID": "<?>",
                "AWS_SECRET_ACCESS_KEY":"<?>"
             }
        },
        {
            "name": "Attach local process",
            "type": "go",
            "request": "attach",
            "mode": "local",
            "processId": 0,
            "apiVersion": 2,
            "showLog": true
          },
        //   https://vscode-debug-specs.github.io/go/#basic
          {
            "name": "Attach to server",
            "type": "go",
            "request": "attach",
            // "preLaunchTask": "debug dlv",
            "mode": "remote",
            "remotePath": "${workspaceFolder}",
            "port": 23456,
            "host": "127.0.0.1",
            "cwd": "${workspaceFolder}",
            "apiVersion": 2,
            "showLog": true
        }
    ]
}